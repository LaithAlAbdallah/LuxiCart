@model LuxiCart.EF.Models.ProofOfIdentity

@{
    ViewData["Title"] = "ProofOfIdentity";
    Layout = "~/Areas/AdminSeller/Views/Shared/_DahboardLayout.cshtml";
}


<div class="row w-100 mx-0">
    <div class="col-lg-8 mx-auto">
        <div class="auth-form-light text-left py-5 ">
            <h1 class="font-weight-bold" style="text-align:center;">Identity Proof</h1>
            <br />
            <div class="shadow p-3 mb-5 bg-white rounded">
                <form asp-action="ProofOfIdentity" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Type of identity </label>
                        <select class="form-control" name="TypeOfIdentityId">
                            <option value="1">ID Card</option>
                            <option value="2">Driver License</option>
                            <option value="3">Passport</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Country of issue </label>
                        <select class="form-control" name="CountryOfIssue">
                            @await Component.InvokeAsync("Country")
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Identity number </label>
                        <input asp-for="IdentityNumber" class="form-control" />
                        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Expiry date </label>
                        <input asp-for="ExpiryDate" class="form-control" />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Identity image </label>
                        <input asp-for="IdentityImage" class="form-control" />
                        <span asp-validation-for="IdentityImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Next" class="btn btn-block btn-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

