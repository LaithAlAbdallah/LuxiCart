@model LuxiCart.EF.Models.SellerCreditCard

@{
    ViewData["Title"] = "SellerCreditCard";
    Layout = "~/Areas/AdminSeller/Views/Shared/_DahboardLayout.cshtml";
}


<div class="row w-100 mx-0">
    <div class="col-lg-8 mx-auto">
        <div class="auth-form-light text-left py-5 ">
            <h1 class="font-weight-bold" style="text-align:center;">Credit Card</h1>
            <br />
            <div class="shadow p-3 mb-5 bg-white rounded">
                <form asp-action="SellerCreditCard" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Card number </label>
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Expiry date </label>
                        <input asp-for="ExpiryDate" class="form-control" />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Card holder name </label>
                        <input asp-for="CardHolderName" class="form-control" />
                        <span asp-validation-for="CardHolderName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Finish" class="btn btn-block btn-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
