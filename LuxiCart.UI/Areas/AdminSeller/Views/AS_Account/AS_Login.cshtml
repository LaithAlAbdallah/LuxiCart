@model LuxiCart.UI.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "AS_Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <h2 style="text-align:center;">Welcome to LuxiCart  </h2>
            <h2 class="font-weight-light" style="text-align:center;">  Seller Central </h2>
            <form class="pt-3" asp-action="AS_Login" method="post">
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Username">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Login" class="btn btn-block btn-dark" />
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Don't have an account? <a asp-action="AS_Register" class="text-info">Create</a>
                </div>
                <br />

                <div class="text-center mt-4 font-weight-light">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="btn btn-rounded btn-light btn-block">Cancel</a>
                </div>

            </form>
            <div class="text-center mt-4 font-weight-light">
                
                <text style="font-weight:bold; color: red; font-size:x-large">
                    For Testing :<br /> 
                    Email : laith.seller@gmail.com<br />
                    Pass : 123@Aa
                </text> 
            </div>
        </div>
    </div>
</div>


