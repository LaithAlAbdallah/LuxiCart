@model LuxiCart.EF.Models.Address

@{
    ViewData["Title"] = "Address";
    Layout = "~/Areas/AdminSeller/Views/Shared/_DahboardLayout.cshtml";
}

<div class="row w-100 mx-0">
    <div class="col-lg-8 mx-auto">
        <div class="auth-form-light text-left py-5 ">
            <h1 class="font-weight-bold" style="text-align:center;">Address</h1>
            <br />
            <div class="shadow p-3 mb-5 bg-white rounded">
                <form asp-action="Address" method="post" class="pt-3">
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Country </label>
                        <select name="CountryId" class="form-control">
                            @await Component.InvokeAsync("Country")
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> City </label>
                        <input asp-for="City" class="form-control form-control-lg" placeholder="City">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Postal code </label>
                        <input type="text" asp-for="PostalCode" class="form-control form-control-lg" placeholder="PostalCode">
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Street name </label>
                        <input asp-for="StreetName" class="form-control form-control-lg" placeholder="Street Name ">
                        <span asp-validation-for="StreetName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Unit number </label>
                        <input type="text" asp-for="UnitNumber" class="form-control" placeholder="Unit Number">
                        <span asp-validation-for="UnitNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Address line 1 </label>
                        <input asp-for="AddressLineOne" class="form-control form-control-lg" placeholder="Address Line 1">
                        <span asp-validation-for="AddressLineOne" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" style="color:darkgoldenrod;"> Address line 2 </label>
                        <input asp-for="AddressLineTwo" class="form-control form-control-lg" placeholder="Address Line 2">
                        <span asp-validation-for="AddressLineTwo" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <input type="submit" value="Next" class="btn btn-block btn-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
