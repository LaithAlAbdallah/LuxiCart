@model LuxiCart.EF.Models.ProductCategory

@{
    ViewData["Title"] = "AddSub";
    Layout = "~/Areas/AdminSeller/Views/Shared/_DahboardLayout.cshtml";
}



@if (TempData["SuccessMessage"] != null)
{
    <div id="successPopup" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row w-100 mx-0">
    <div class="col-lg-8 mx-auto">
        <div class="auth-form-light text-left py-5 ">
            <h1 class="font-weight-bold" style="">Add Sub-Category</h1>
            <br />
            <div class="shadow p-3 mb-5 bg-white rounded">
                <form asp-action="AddSub" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-info" />
                        <a asp-action="CategoriesIndex" class="btn btn-dark">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Close the success popup after a few seconds
    $(document).ready(function () {
        setTimeout(function () {
            $("#successPopup").alert('close');
        }, 5000); // Close after 5 seconds, adjust as needed
    });
</script>

