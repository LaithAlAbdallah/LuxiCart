@model LuxiCart.UI.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <a asp-controller="Home" asp-action="Index" class="btn btn-block btn-inverse-dark"> Home </a>
    </div>
    <div class="col-3"></div>
</div>

    
<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto" >
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
             <h2>Welcome to LuxiCart</h2>
            <form class="pt-3" asp-action="Login" method="post" >
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Username">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Login" class="btn btn-block btn-dark" />
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Don't have an account? <a asp-action="Register" class="text-info">Create</a>
                </div>
                <br/>
                <br />
                <br />

                <div class="text-center mt-4 font-weight-light">
                    <h3 style="text-align:center;">Login to seller Central?</h3>
                    <a asp-area="AdminSeller" asp-controller="AS_Account" asp-action="AS_Login"
                     class="btn btn-rounded btn-light btn-block">Let's Go!</a>
                </div>

            </form>
        </div>
    </div>
</div>
    
    


