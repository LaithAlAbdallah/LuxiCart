@model LuxiCart.UI.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <a asp-controller="Home" asp-action="Index" class="btn btn-block btn-inverse-dark"> Home </a>
    </div>
    <div class="col-3"></div>
</div>

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <h2 style="text-align:center;">Welcome to LuxiCart </h2>
            <h6 class="font-weight-light" style="text-align:center;">  Where your shopping journey begins! </h6>
            <form asp-action="Register" method="post" class="pt-3">
                <div class="form-group">
                    <input asp-for="FullName" class="form-control form-control-lg" placeholder="Full Name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="font-size:20px;"> <input type="radio" asp-for="Gender" value="Male" style="height:23px; width:23px; margin-right:6px; margin-left:8px;" /> Male </label>
                    <label style="font-size:20px;"> <input type="radio" asp-for="Gender" value="Female" style="height:23px; width:23px; margin-right:6px; margin-left:16px;" /> Female </label>

                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Phone Number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                
                <div class="mt-3">
                    <input type="submit" value="Register" class="btn btn-block btn-dark" />
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Already have an account? <a asp-action="Login" class="text-info">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

